@model p1.ModelView.ModelAll
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script src="~/Scripts/Entry.js" type="text/javascript"></script>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @{ Html.EnableClientValidation(false); }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card card-cyan">
            <div class="card card-header"><h3 class="card-title">New P.O</h3></div>
            <div class="card-body">
                <div class="container">
                    <div class="row">


                        <div class="col-4">
                            <div class="form-group">
                                Order Date
                                @Html.EditorFor(model => model.order_date, new { htmlAttributes = new { @class = "form-control" } })

                                <span class="text-danger" id="order_date_error"></span>
                            </div>

                        </div>




                    </div>
                </div>
            </div>
        </div>
        <div class="card card-cyan">
            <div class="card card-header"><h3 class="card-title">Vendor</h3></div>
            <div class="card-body">

                <div class="container" id="VendorSelect">
                    <div class="row">
                        <div class="col-md-4">

                            <div class="form-group">
                                Name
                                @Html.DropDownListFor(model => model.vendor_no,
                               new SelectList(Model.vendors, "Value", "Text"), "Select Vendor", htmlAttributes: new { @class = "form-control" })

                            </div>
                            <span class="text-danger" id="vendor_error"></span>


                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                Contact Number
                                @Html.EditorFor(model => model.vendor_Master.vendor_contactno,
                               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                GST No
                                @Html.EditorFor(model => model.vendor_Master.vendor_GSTno,
                               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="col-md-4">

                            <div class="form-group">
                                Address
                                @Html.EditorFor(model => model.vendor_Master.vendor_address,
                               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                State
                                @Html.EditorFor(model => model.vendor_Master.vendor_state,
                               new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                    </div>


                </div>
                <div class="container" id="VendorAdd" style="display: none;">
                    <div class="row">

                        <div class="col-md-4">

                            <div class="form-group">
                                Name
                                @Html.EditorFor(model => model.vendorAdd.vendor_name, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <span class="text-danger" id="vendor_name_error"></span>

                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                Contact Number
                                @Html.EditorFor(model => model.vendorAdd.vendor_contactno, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <span class="text-danger" id="vendor_contactno_error"></span>



                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                GST No
                                @Html.EditorFor(model => model.vendorAdd.vendor_GSTno, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <span class="text-danger" id="vendor_GSTno_error"></span>


                        </div>

                        <div class="col-md-4">

                            <div class="form-group">
                                Address
                                @Html.EditorFor(model => model.vendorAdd.vendor_address, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <span class="text-danger" id="vendor_address_error"></span>


                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                State
                                @Html.DropDownListFor(model => model.vendorAdd.vendor_state, new SelectList(Enum.GetValues(typeof(State))), "Select State", htmlAttributes: new { @class = "form-control" })

                            </div>
                            <span class="text-danger" id="vendor_state_error"></span>


                        </div>
                        <div class="col-md-2" style="margin-top:20px;">
                            <div class="form-group">
                                <input type="button" name="finalAddVendor" id="finalAddVendor" value="Add Vendor" class="btn btn-success" />
                            </div>
                        </div>
                        <div class="col-md-2" style="margin-top:20px;">

                            <div class="form-group">
                                <input type="button" name="cancelAddVendor" id="cancelAddVendor" value="Select Vendor" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>



                </div>
            </div>

        </div>
        <div class="card card-cyan">
            <div class="card card-header"><h3 class="card-title">Item</h3></div>
            <div class="card-body">
                <div class="container">
                    <div class="row" id="ItemSelect">

                        <div class="col-md-4">
                            <div class="form-group">
                               Items
                                @Html.DropDownListFor(model => model.item_name,
       new SelectList(Model.items, "Value", "Text")
       , "Select Item", htmlAttributes: new { @class = "form-control" })
      

                            </div>
                            <span class="text-danger" id="item_error"></span>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                Rate
                                @Html.EditorFor(model => model.item_rate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>

                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                Unit
                                @Html.EditorFor(model => model.item_Master.item_unit, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                Quantity
                                @Html.EditorFor(model => model.qty, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                            <span class="text-danger" id="qty_error"></span>

                        </div>

                        <div class="col-md-4" style="margin-top:20px;">
                            <div class="form-group">
                                <input type="button" name="addItemList" id="addItemList" value="Add To List" class="btn btn-success" />
                            </div>
                        </div>


                    </div>

                    <div class="row" id="ItemAdd" style="display:none;">

                        <div class="col-md-4">
                            <div class="form-group">
                                Item Name
                                @Html.EditorFor(model => model.itemAddModel.item_name, new { htmlAttributes = new { @class = "form-control" } })
                                <span class="text-danger" id="item_name_error"></span>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                Item Rate
                                @Html.EditorFor(model => model.itemAddModel.item_rate, new { htmlAttributes = new { @class = "form-control" } })
                                <span class="text-danger" id="item_rate_error"></span>

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                Item Unit
                                @Html.EditorFor(model => model.itemAddModel.item_unit, new { htmlAttributes = new { @class = "form-control" } })
                                <span class="text-danger" id="item_unit_error"></span>

                            </div>
                        </div>




                        <div class="col-md-2" style="margin-top:20px;">
                            <div class="form-group">
                                <input type="button" name="finalAddItem" id="finalAddItem" value="Add Item" class="btn btn-success" />
                            </div>
                        </div>
                        <div class="col-md-2" style="margin-top:20px;">

                            <div class="form-group">
                                <input type="button" name="cancelAddItem" id="cancelAddItem" value="Select Item" class="btn btn-danger" />
                            </div>
                        </div>


                    </div>
                </div>


            </div>
        </div>


    </div>
    if (Model.List.Any())
    {
        <div class="card card-cyan">
            <div class="card card-header"><h3 class="card-title">Items In List</h3></div>
            <div class="card-body">

                <table style="width:100%;">
                    <tr>
                        <th>
                            Item
                        </th>
                        <th>
                            Rate
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td>
                                @item.item_name
                            </td>
                            <td>
                                @item.item_rate
                            </td>
                            <td>
                                @item.qty
                            </td>
                            <td>
                                @item.amount
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })

                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            <b>
                                Total
                            </b>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                        <td>
                            <b>
                                @Model.List.Sum(x => x.amount)
                            </b>
                        </td>
                        <td>
                        </td>
                    </tr>
                </table>


                @if (Model.List.Any())
                {
                    <div class="form-group" style="float:initial;">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" name="placeOrder" id="placeOrder" value="Place Order" class="btn btn-success" />

                        </div>
                    </div>
                }


                </div>
            </div>
            }
            <div>

            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Order</h5>

                        </div>
                        <div class="modal-body" id="purchase_no_success">

                        </div>
                        <div class="modal-footer">
                            @Html.ActionLink("Close", "Reload","",new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            </div>

        }
<script type="text/javascript">
    $(function () {
        var msg = '@ViewData["msg"]';
        if (msg != '') {
            $("#purchase_no_success").html(msg);
            $("#exampleModalCenter").modal();
        }

    });
</script>
<script>
    
            $(document).ready(function () {


                $("#vendor_no").on('change', function () {
                    var vendor_no = $("#vendor_no").val();

                    if (vendor_no == -1) {

                        $("#VendorAdd").css("display", "flex");
                        $("#VendorSelect").css("display", "none");
                    }
                    else {

                        $.ajax({
                            type: "POST",
                            url: '/Purchase/getVendorInfo',
                            data: '{vendor_no:' + vendor_no + '}',
                            contentType: "application/json;charset=utf-8",
                            dataType: "json",
                            success: function (data) {
                                var data = data.data[0];
                                var userData = data;
                                $("#vendor_Master_vendor_contactno").val(userData.vendor_contactno);
                                $("#vendor_Master_vendor_GSTno").val(userData.vendor_GSTno);
                                $("#vendor_Master_vendor_address").val(userData.vendor_address);
                                $("#vendor_Master_vendor_state").val(userData.vendor_state);

                            }
                        });
                    }
                });

                $("#item_name").on('change', function () {
                    var item_name = $("#item_name").val();
                    if (item_name == '') {
                        $("#item_rate").val(0);
                        $("#item_Master_item_unit").val("");
                        $("#qty").val(1);
                    }
                    else if (item_name == -1) {
                        $("#ItemSelect").css("display", "none");
                        $("#ItemAdd").css("display", "flex");

                    }
                    else {

                        $.ajax({
                            type: "POST",
                            url: '/Purchase/ItemRate',
                            data: '{item_name:"' + item_name + '"}',
                            contentType: "application/json;charset=utf-8",
                            dataType: "json",
                            success: function (data) {
                                var data = data.data[0];
                                var userData = data;
                                $("#item_rate").val(userData.item_rate);
                                $("#item_Master_item_unit").val(userData.item_unit);

                            }
                        });
                    }
                });
            });
</script>
