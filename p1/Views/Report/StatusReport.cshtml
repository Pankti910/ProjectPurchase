@model p1.ReportsModel.Vendor_Tax
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/jquery-3.4.1.js"></script>

<script src="~/Scripts/Entry.js" type="text/javascript"></script>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        @{ Html.EnableClientValidation(false); }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card card-cyan">
            <div class="card card-header"><h3 class="card-title">Status Report</h3></div>
            <div class="card-body">
                <div class="container">
                    <div class="row">

                        <div class="col-4">
                            <div class="form-group">
                                Status
                                <select id="status" class="form-control">
                                    <option value="" selected>--Select--</option>
                                    <option value="New">New</option>
                                    <option value="Approved">Approved</option>
                                </select>
                            </div>

                        </div>



                    </div>
                </div>
                <div id="divNew">
                    <table id="reportTblNew" class="table table-bordered" style="width:100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    Purchase No
                                </th>
                                <th>
                                    Vendor
                                </th>
                                <th>
                                    Order Date
                                </th>
                                <th>
                                    Passing Days
                                </th>
                                <th>
                                    Amount
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div id="divApproved">
                    <table id="reportTblApproved" class="table table-bordered" style="width:100%;">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    Purchase No
                                </th>
                                <th>
                                    Vendor
                                </th>
                                <th>
                                    Order Date
                                </th>
                                <th>
                                    Invoice Date
                                </th>
                                <th>
                                    Invoice No
                                </th>
                                <th>
                                    Amout
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        var status='';
        $("#divNew").css('display', 'none');
        $("#divApproved").css('display', 'none');

        $("#status").on('change', function () {
           status= $("#vendorCode").val();
            if ($("#status").val() == 'New') {

                $("#divNew").css('display', 'block');
                $("#divApproved").css('display', 'none');

                tableFillNew();

            }
            else if($("#status").val()=="Approved") {
                $("#divApproved").css('display', 'block');

                $("#divNew").css('display', 'none');

                tableFillApproved();

                
            }
        });
        

    });




    function tableFillNew() {
        $("#reportTblNew").dataTable({



            "paging": false,

            "searching": false,
            "ajax": {
                "type": 'GET',
                "url": '/Report/GetDataStatusNew',
                "contentType": 'application / json; charset=utf - 8',
                "dataType": 'json',
            },
            "columns": [
                { 'data': 'purchase_no' },
                {'data':'vendor_name'},
                {
                    'data': 'order_date',
                    'render': function (jsonDate) {
                        var date = new Date(parseInt(jsonDate.substr(6)));
                        var month = ("0" + (date.getMonth() + 1)).slice(-2);
                        return (date.getFullYear() + '-' + month + '-' + ("0" + date.getDate()).slice(-2));
                    }
                },
                {'data':'diff'},
                { 'data': 'count' }
            ],


            "dom": 'Bfrtip',
            "buttons": [
                {
                    extend: 'copy',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    text: '<i class="far fa-copy"></i> Copy'
                },
                {
                    extend: 'excel',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StatusNewReport-' + Date.now(),
                    text: '<i class="far fa-file-excel"></i> Excel'
                },
                {
                    extend: 'pdf',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StatusNewReport-' + Date.now(),
                    text: '<i class="far fa-file-pdf"></i> Pdf'
                },
                {
                    extend: 'csv',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StatusNewReport-' + Date.now(),
                    text: '<i class="fas fa-file-csv"></i> CSV'
                },
                {
                    extend: 'print',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StausNewReport-' + Date.now(),
                    text: '<i class="fas fa-print"></i> Print'
                }
            ]

        });

    }


    function tableFillApproved() {
        $("#reportTblApproved").dataTable({



            "paging": false,

            "searching": false,
            "ajax": {
                "type": 'GET',
                "url": '/Report/GetDataStatusApproved',
                "contentType": 'application / json; charset=utf - 8',
                "dataType": 'json',
            },
            "columns": [
                { 'data': 'purchase_no' },
                { 'data': 'vendor_name' },
                {
                    'data': 'order_date',
                    'render': function (jsonDate) {
                        var date = new Date(parseInt(jsonDate.substr(6)));
                        var month = ("0" + (date.getMonth() + 1)).slice(-2);
                        return (date.getFullYear() + '-' + month + '-' + ("0" + date.getDate()).slice(-2));
                    }
                },
                {
                    'data': 'invoice_date',
                    'render': function (jsonDate) {
                        var date = new Date(parseInt(jsonDate.substr(6)));
                        var month = ("0" + (date.getMonth() + 1)).slice(-2);
                        return (date.getFullYear() + '-' + month + '-' + ("0" + date.getDate()).slice(-2));
                    }
                },
                {'data':'invoice_no'},
                { 'data': 'count' }
            ],


            "dom": 'Bfrtip',
            "buttons": [
                {
                    extend: 'copy',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    text: '<i class="far fa-copy"></i> Copy'
                },
                {
                    extend: 'excel',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StatusReport-' + Date.now(),
                    text: '<i class="far fa-file-excel"></i> Excel'
                },
                {
                    extend: 'pdf',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StatusReport-' + Date.now(),
                    text: '<i class="far fa-file-pdf"></i> Pdf'
                },
                {
                    extend: 'csv',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'StatusReport-' + Date.now(),
                    text: '<i class="fas fa-file-csv"></i> CSV'
                },
                {
                    extend: 'print',
                    footer: true,
                    className: 'btn btn-info rounded-0',
                    filename: 'PurchaseReport-' + Date.now(),
                    text: '<i class="fas fa-print"></i> Print'
                }
            ]

        });

    }


</script>